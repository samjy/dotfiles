[color]  # Ensure we get color
	diff = auto
	branch = auto
	status = auto

[alias]  # shortcuts
	br = branch
	co = checkout
	ci = commit
	st = status
	lol  = log --graph --decorate --pretty=oneline --abbrev-commit
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
	
